<section style="background-color: #eee;">
  <div class="container py-5">
    <div class="row">
      <div class="col-lg-4">
        <div class="card mb-4">
          <div class="card-body text-center">
            <img
              src="{{user.image}}"
              alt="avatar"
              class="rounded-circle img-fluid"
              style="width: 150px;"
            />
            <div class="d-flex justify-content-center mb-2">
              <a href="/logout" class="btn btn-outline-primary ms-1">LogOut</a>
              {{!-- administra el cambio de contrase√±a --}}
              <a
                href="/change-password"
                class="btn btn-outline-primary ms-1"
                data-bs-toggle="modal"
                data-bs-target="#changePasswordModal"
              >Change Password</a>
            </div>
          </div>
        </div>
      </div>
      {{!-- muestra contenido de profile del usuario --}}
      <div class="col-lg-8">
        <div class="card mb-4">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Full Name</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{user.first_name}}
                  {{user.last_name}}</p>
              </div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Age</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{user.age}}</p>
              </div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Gender</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{user.gender}}</p>
              </div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Email</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{user.email}}</p>
              </div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Cart Id:</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{user.cartId}}</p>
              </div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Role</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{user.role}}</p>
              </div>
            </div>
            <hr />
            {{!-- cambio de plan user a premium --}}
            {{#if user.isUser}}
                        <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Purchase History</p>
              </div>
              <div class="col-sm-9">
                <a
                  href="/purchase/viewTicketuser"
                  class="btn btn-outline-primary ms-1"
                >Tickets</a>
              </div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Premium plan</p>
              </div>
              <div class="col-sm-9">
                <a href="/premium/uploaduser" class="btn btn-outline-primary ms-1">File Upload Here</a>
              </div>
              <hr />
            {{/if}}
            {{!-- solo ve los tickets de compra de cada usuario --}}
            {{#if user.isPremium}}
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Purchase History</p>
                </div>
                <div class="col-sm-9">
                  <a href="/purchase/viewTicketuser" class="btn btn-outline-primary ms-1">Tickets</a>
                </div>
              </div>
               <hr />
              {{/if}}
           {{!-- administra productos, control de ticket Admin --}}
            {{#if user.isAdmin}}
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Admin</p>
                </div>
                <div class="col-sm-9">
                  <a href="/admin/controlpanel">
                    <button
                      type="button"
                      class="btn btn-outline-primary ms-1"
                    >Control Product Panel</button>
                  </a>
                  <a href="/admin/panelpurchase">
                    <button
                      type="button"
                      class="btn btn-outline-primary ms-1"
                    >Buy Orders Tickets Panel Control</button>
                  </a>
                  <a href="/admin/controlclient">
                    <button
                      type="button"
                      class="btn btn-outline-primary ms-1"
                    >Client Panel Control</button>
                  </a>
                </div>
              </div>
            {{/if}}
            {{!-- Administra sus productos user Premium --}}
            {{#if user.isPremium}}
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Premium</p>
                </div>
                <div class="col-sm-9">
                  <a href="/premium/controlpanel">
                    <button
                      type="button"
                      class="btn btn-outline-primary ms-1"
                    >Control Product Panel</button>
                  </a>
                </div>
              </div>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>